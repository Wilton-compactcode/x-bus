<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.bus" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">

    <name>Event Bus</name>
    <description>Arranjo Unificado de Ônibus, Indicadores e Limpeza</description>
    <author email="contato@wiltongoncalves.com.br" href="https://compactcodebrasil.com.br">
        Wilton Gonçalves
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">  
        <config-file parent="/manifest" target="AndroidManifest.xml">
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        </config-file>


        <preference name="AndroidPersistentFileLocation" value="Internal" />
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/splash/splashscreen.xml" />
        <preference name="AndroidWindowSplashScreenBackground" value="#42f5b3" />
        <icon src="res/mipmap-anydpi-v26/ic_launcher.xml" />
        <icon monochrome="res/mipmap-mdpi/ic_launcher_monochrome.png" background="res/mipmap-mdpi/ic_launcher_background.png" density="mdpi" foreground="res/mipmap-mdpi/ic_launcher_foreground.png" />
        <icon monochrome="res/mipmap-hdpi/ic_launcher_monochrome.png" background="res/mipmap-hdpi/ic_launcher_background.png" density="hdpi" foreground="res/mipmap-hdpi/ic_launcher_foreground.png" />
        <icon monochrome="res/mipmap-xhdpi/ic_launcher_monochrome.png" background="res/mipmap-xhdpi/ic_launcher_background.png" density="xhdpi" foreground="res/mipmap-xhdpi/ic_launcher_foreground.png" />
        <icon monochrome="res/mipmap-xxhdpi/ic_launcher_monochrome.png" background="res/mipmap-xxhdpi/ic_launcher_background.png" density="xxhdpi" foreground="res/mipmap-xxhdpi/ic_launcher_foreground.png" />
        <icon monochrome="res/mipmap-xxxhdpi/ic_launcher_monochrome.png" background="res/mipmap-xxxhdpi/ic_launcher_background.png" density="xxxhdpi" foreground="res/mipmap-xxxhdpi/ic_launcher_foreground.png" />
    </platform>
</widget>
